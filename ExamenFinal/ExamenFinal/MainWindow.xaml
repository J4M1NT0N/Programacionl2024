<Window x:Class="ExamenFinal.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ExamenFinal"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel>
            <ComboBox Name="UsuarioComboBox" Margin="5" DisplayMemberPath="Nombre" SelectedValuePath="Usuario"/>
            <TextBox Name="NombreTextBox" Margin="5" Text="Nombre"/>
            <TextBox Name="PrecioTextBox" Margin="5" Text="Precio"/>
            <TextBox Name="ExistenciaTextBox" Margin="5" Text="Existencia"/>

            <Button Name="CrearButton" Content="Crear Producto" Margin="5" Click="CrearButton_Click"/>
            <Button Name="ActualizarButton" Content="Actualizar Producto" Margin="5" Click="ActualizarButton_Click"/>
            <Button Name="BorrarButton" Content="Borrar Producto" Margin="5" Click="BorrarButton_Click"/>
            <ListBox Name="ProductosListBox" Margin="5" DisplayMemberPath="Nombre"/>
        </StackPanel>
    </Grid>
</Window>
